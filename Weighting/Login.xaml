<Window
    x:Class="Weighting.Login"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Weighting"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Login"
    Width="400"
    Height="250"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Grid>
        <materialDesign:Card>
            <Border Padding="10">
                <UniformGrid Columns="2" Rows="3">

                    <TextBlock
                        Margin="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center">
                        账号：
                    </TextBlock>
                    <TextBox
                        Height="40"
                        VerticalAlignment="Center"
                        Text="{Binding UserName}" />
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center">密码：</TextBlock>
                    <PasswordBox
                        x:Name="PasswordInput"
                        Height="40"
                        VerticalAlignment="Center"
                        local:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Width="100">退出</Button>
                    <Button Width="100" Command="{Binding LoginCommand}">登录</Button>


                </UniformGrid>
            </Border>
        </materialDesign:Card>

    </Grid>
</Window>
