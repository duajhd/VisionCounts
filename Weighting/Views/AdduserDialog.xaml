<UserControl
    x:Class="Weighting.Views.AdduserDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Weighting"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="Auto"
    Height="Auto"
    MinWidth="200"
    MaxWidth="800"
    mc:Ignorable="d">
    <Grid>
        <materialDesign:Card>
            <Border
                Width="400"
                Height="300"
                Padding="10">
                <UniformGrid
                    Columns="2"
                    Cursor=""
                    Rows="4">

                    <TextBlock
                        Margin="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        账号：
                    </TextBlock>
                    <TextBox
                        Height="40"
                        VerticalAlignment="Center"
                        Text="{Binding Path=UserName, Mode=TwoWay}" />
                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">密码：</TextBlock>
                    <TextBox
                        Height="40"
                        VerticalAlignment="Center"
                        Text="{Binding Path=Password, Mode=TwoWay}" />
                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">用户角色：</TextBlock>
                    <ComboBox
                        materialDesign:ComboBoxAssist.MaxLength="2"
                        materialDesign:HintAssist.Hint="选择角色"
                        materialDesign:HintAssist.HintOpacity=".26"
                        DisplayMemberPath="RoleName"
                        ItemsSource="{Binding AllRoles}"
                        SelectedItem="{Binding SelectedRole}" />

                    <Button
                        Width="70"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        CommandParameter="False"
                        Content="取消" />
                    <Button
                        Width="70"
                        Command="{Binding SignUpCommand}"
                        Content="确定" />


                </UniformGrid>
            </Border>
        </materialDesign:Card>

    </Grid>
</UserControl>
