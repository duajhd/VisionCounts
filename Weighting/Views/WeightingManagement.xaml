<UserControl
    x:Class="Weighting.Views.WeightingManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Weighting.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Weighting.Shared"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  卡片样式模板  -->
        <DataTemplate x:Key="CardTemplate">
            <Border
                Width="150"
                Height="150"
                Margin="10"
                Background="Gray"
                CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  标题与红点  -->
                    <StackPanel
                        Grid.Row="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">
                        <TextBlock
                            FontWeight="Bold"
                            Foreground="White"
                            Text="{Binding Value.ScalingName}" />
                        <Ellipse
                            Width="20"
                            Height="20"
                            Margin="10,0,0,0">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <!--  默认填充色为红色  -->
                                    <Setter Property="Fill" Value="Red" />
                                    <Style.Triggers>
                                        <!--  当绑定的 IsGreenFill 属性为 true 时，改变填充颜色  -->
                                        <DataTrigger Binding="{Binding Value.IsSatisfied}" Value="True">
                                            <Setter Property="Fill" Value="Green" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                    </StackPanel>

                    <!--  内容区域  -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,5"
                            Foreground="White"
                            Text="重量" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="5,5,0,0"
                            Background="White"
                            Text="{Binding Value.Result}" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,5"
                            Foreground="White"
                            Text="单位" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="5,5,0,0"
                            Background="White"
                            Text="{Binding Value.MaterialUnit}" />
                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
        <vm:GlobalViewModelSingleton x:Key="GlobalViewModelSingleton" />

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button
            Width="100"
            Margin="40,0,0,0"
            HorizontalAlignment="Left"
            Command="{Binding GenerateRecordsCommand}">
            生成记录
        </Button>
        <ScrollViewer Grid.Row="1">
            <ListBox
                Background="Transparent"
                ItemTemplate="{StaticResource CardTemplate}"
                ItemsSource="{Binding Instance.IPToMeasureResult, Source={StaticResource GlobalViewModelSingleton}}"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </ScrollViewer>
    </Grid>
</UserControl>
