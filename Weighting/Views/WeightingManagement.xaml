<UserControl
    x:Class="Weighting.Views.WeightingManagement"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Weighting.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
     xmlns:converters="clr-namespace:Weighting.Shared"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:Weighting.Shared"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <!--  卡片样式模板  -->
        <converters:gUnitVisibilityConverter x:Key="gUnitVisibilityConverter" />
        <converters:kgUnitVisibilityConverter x:Key="kgUnitVisibilityConverter" />
        <DataTemplate x:Key="CardTemplate" >
            <Border
                HorizontalAlignment="Center"
               Visibility="{Binding Value.MaterialUnit,Converter={StaticResource kgUnitVisibilityConverter}}"
                Width="300"
                Height="300"
                Margin="10"
                Background="Gray"
                CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  标题与红点  -->
                    <StackPanel
                        Grid.Row="0"
                        Margin="5"
                        VerticalAlignment="Center"
                        Orientation="Horizontal">

                        <Ellipse
                            Width="35"
                            Height="35"
                            HorizontalAlignment="Center"
                            Margin="10,0,0,0">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <!--  默认填充色为红色  -->
                                    <Setter Property="Fill" Value="Red" />
                                    <Style.Triggers>
                                        <!--  当绑定的 IsGreenFill 属性为 true 时，改变填充颜色  -->
                                        <DataTrigger Binding="{Binding Value.IsSatisfied}" Value="True">
                                            <Setter Property="Fill" Value="Green" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            Foreground="White"
                            FontSize="16"
                            Text="{Binding Value.ScalingName}" />
                    </StackPanel>

                    <!--  内容区域  -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />


                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            FontSize="16"
                            Margin="0,5"
                             Height="40"
 VerticalAlignment="Bottom"
                            Foreground="White"
                            Text="当前重量" />
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="1"
                            Width="100"
                            Height="40"
                            VerticalAlignment="Bottom"
                            FontSize="16"
                            Margin="5,5,0,0"
                            Background="White"
                            Text="{Binding Value.Result}" />

                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,5"
                            FontSize="16"
                             Height="40"
 VerticalAlignment="Bottom"
                            Foreground="White"
                            Text="单位" />
                        <TextBlock
                            Grid.Row="1"
                            Grid.Column="1"
                            Width="100"
                             Height="40"
 VerticalAlignment="Bottom"
                            FontSize="16"
                            Margin="5,5,0,0"
                            Background="White"
                            Text="{Binding Value.MaterialUnit}" />

                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="0"
                            FontSize="16"
                             Height="40"
 VerticalAlignment="Bottom"
                            Margin="0,5"
                            Foreground="White"
                            Text="标准重量" />
                        <TextBlock
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5,5,0,0"
                            FontSize="16"
                            Width="100"
                             Height="40"
 VerticalAlignment="Bottom"
                            Background="White"
                            Text="{Binding Value.weights}" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,5"
                            FontSize="16"
                             Height="40"
 VerticalAlignment="Bottom"
                            Foreground="White"
                            Text="物料名称" />
                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            FontSize="16"
                            Margin="5,5,0,0" 
                            Height="40"
 VerticalAlignment="Bottom"
                            Width="100"
                            Background="White"
                            Text="{Binding Value.MaterialName}" />

                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="CardTemplate2">
            <Border
               Width="300"
               Height="300"
                 Visibility="{Binding Value.MaterialUnit,Converter={StaticResource gUnitVisibilityConverter}}"
               Margin="10"
               Background="Gray"
               CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="60" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  标题与红点  -->
                    <StackPanel
                       Grid.Row="0"
                       Margin="5"
                       VerticalAlignment="Center"
                       Orientation="Horizontal">

                        <Ellipse
                           Width="35"
                           Height="35"
                           HorizontalAlignment="Center"
                           Margin="10,0,0,0">
                            <Ellipse.Style>
                                <Style TargetType="Ellipse">
                                    <!--  默认填充色为红色  -->
                                    <Setter Property="Fill" Value="Red" />
                                    <Style.Triggers>
                                        <!--  当绑定的 IsGreenFill 属性为 true 时，改变填充颜色  -->
                                        <DataTrigger Binding="{Binding Value.IsSatisfied}" Value="True">
                                            <Setter Property="Fill" Value="Green" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Ellipse.Style>
                        </Ellipse>
                        <TextBlock
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Foreground="White"
                           FontSize="16"
                           Text="{Binding Value.ScalingName}" />
                    </StackPanel>

                    <!--  内容区域  -->
                    <Grid Grid.Row="1" Margin="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />


                        </Grid.ColumnDefinitions>

                        <TextBlock
                           Grid.Row="0"
                           Grid.Column="0"
                           FontSize="16"
                           Margin="0,5"
                            Height="40"
VerticalAlignment="Bottom"
                           Foreground="White"
                           Text="当前重量" />
                        <TextBlock
                           Grid.Row="0"
                           Grid.Column="1"
                           Width="100"
                           Height="40"
                           VerticalAlignment="Bottom"
                           FontSize="16"
                           Margin="5,5,0,0"
                           Background="White"
                           Text="{Binding Value.Result}" />

                        <TextBlock
                           Grid.Row="1"
                           Grid.Column="0"
                           Margin="0,5"
                           FontSize="16"
                            Height="40"
VerticalAlignment="Bottom"
                           Foreground="White"
                           Text="单位" />
                        <TextBlock
                           Grid.Row="1"
                           Grid.Column="1"
                           Width="100"
                            Height="40"
VerticalAlignment="Bottom"
                           FontSize="16"
                           Margin="5,5,0,0"
                           Background="White"
                           Text="{Binding Value.MaterialUnit}" />

                        <TextBlock
                           Grid.Row="2"
                           Grid.Column="0"
                           FontSize="16"
                            Height="40"
VerticalAlignment="Bottom"
                           Margin="0,5"
                           Foreground="White"
                           Text="标准重量" />
                        <TextBlock
                           Grid.Row="2"
                           Grid.Column="1"
                           Margin="5,5,0,0"
                           FontSize="16"
                           Width="100"
                            Height="40"
VerticalAlignment="Bottom"
                           Background="White"
                           Text="{Binding Value.weights}" />
                        <TextBlock
                           Grid.Row="3"
                           Grid.Column="0"
                           Margin="0,5"
                           FontSize="16"
                            Height="40"
VerticalAlignment="Bottom"
                           Foreground="White"
                           Text="物料名称" />
                        <TextBlock
                           Grid.Row="3"
                           Grid.Column="1"
                           FontSize="16"
                           Margin="5,5,0,0" 
                           Height="40"
VerticalAlignment="Bottom"
                           Width="100"
                           Background="White"
                           Text="{Binding Value.MaterialName}" />

                    </Grid>
                </Grid>
            </Border>
        </DataTemplate>

        <vm:GlobalViewModelSingleton x:Key="GlobalViewModelSingleton" />

    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button
            Width="100"
            Margin="40,0,0,0"
            HorizontalAlignment="Left"
            Command="{Binding GenerateRecordsCommand}">
            生成记录
        </Button>
        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>

                </Grid.RowDefinitions>
                <ListBox
                      Background="Transparent"
                      Grid.Row="0"
                      ItemTemplate="{StaticResource CardTemplate}"
                      ItemsSource="{Binding Instance.IPToMeasureResult, Source={StaticResource GlobalViewModelSingleton}}"
                      ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel  HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
                <ListBox
                   Background="Transparent"
                   Grid.Row="1"
                   ItemTemplate="{StaticResource CardTemplate2}"
                   ItemsSource="{Binding Instance.IPToMeasureResult, Source={StaticResource GlobalViewModelSingleton}}"
                   ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center" />
                        </ItemsPanelTemplate>
                    </ListBox.ItemsPanel>
                </ListBox>
            </Grid>

        </ScrollViewer>
    </Grid>
</UserControl>
