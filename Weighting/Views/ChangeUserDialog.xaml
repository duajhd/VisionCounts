<UserControl
    x:Class="Weighting.Views.ChangeUserDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Weighting.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Weighting.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="Auto"
    Height="Auto"
    MinWidth="200"
    MaxWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:RoleToIdConverter x:Key="RoleToIdConverter" />
    </UserControl.Resources>
    <Grid>
        <materialDesign:Card>
            <Border
                Width="400"
                Height="300"
                Padding="10">
                <UniformGrid
                    Columns="2"
                    Cursor=""
                    Rows="3">

                    <TextBlock
                        Margin="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center">
                        用户名：
                    </TextBlock>
                    <TextBox
                        Height="40"
                        VerticalAlignment="Center"
                        Text="{Binding SelectedUserName}" />
                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">用户角色：</TextBlock>
                    <!--<PasswordBox
                        x:Name="PasswordInput"
                        Height="40"
                        VerticalAlignment="Center"
                        local:PasswordBoxHelper.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />-->

                    <ComboBox
                        materialDesign:ComboBoxAssist.MaxLength="2"
                        materialDesign:HintAssist.Hint="选择角色"
                        materialDesign:HintAssist.HintOpacity=".26"
                        DisplayMemberPath="RoleName"
                        IsEditable="True"
                        ItemsSource="{Binding AllRoles}"
                        SelectedItem="{Binding SelectedRoleForEditing}" />

                    <Button
                        Width="70"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        CommandParameter="False"
                        Content="取消" />
                    <Button
                        Width="70"
                        Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                        Content="确定" />


                </UniformGrid>
            </Border>
        </materialDesign:Card>

    </Grid>
</UserControl>
