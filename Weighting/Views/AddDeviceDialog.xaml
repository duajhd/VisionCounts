<UserControl
    x:Class="Weighting.Views.AddDeviceDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Weighting.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Weighting.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="300"
    Height="Auto"
    MinWidth="200"
    MaxWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:ScaleNameToNumberConverter x:Key="ScaleNameToNumberConverter" />
    </UserControl.Resources>
    <Border Padding="30">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>


                <RowDefinition />
                <RowDefinition />
                <RowDefinition />

                <RowDefinition />
                <RowDefinition />
                <RowDefinition />

                <RowDefinition />
                <RowDefinition />


            </Grid.RowDefinitions>






            <TextBlock
                Grid.Row="0"
                Grid.Column="0"
                Margin="3,10,3,3"
                VerticalAlignment="Center"
                Text="秤台单位*" />
            <ComboBox
                Grid.Row="0"
                Grid.Column="1"
                materialDesign:ComboBoxAssist.MaxLength="2"
                materialDesign:HintAssist.Hint="选择单位"
                materialDesign:HintAssist.HintOpacity=".26"
                ItemsSource="{Binding Units}"
                SelectedItem="{Binding Unit}" />


            <TextBlock
                Grid.Row="1"
                Grid.Column="0"
                Margin="3,10,3,3"
                VerticalAlignment="Center"
                Text="最大称重*" />
            <TextBox
                Name="txtMaxWeight"
                Grid.Row="1"
                Grid.Column="1"
                Margin="3,10,3,3"
                Text="{Binding MaxWeight}" />

            <TextBlock
                Grid.Row="2"
                Grid.Column="0"
                Margin="3,10,3,3"
                VerticalAlignment="Center"
                Text="品牌*" />
            <TextBox
                Name="txtBrand"
                Grid.Row="2"
                Grid.Column="1"
                Margin="3,10,3,3"
                Text="{Binding Brand}" />

            <TextBlock
                Grid.Row="3"
                Grid.Column="0"
                Margin="3,10,3,3"
                VerticalAlignment="Center"
                Text="IP*" />
            <TextBox
                Name="txtIP"
                Grid.Row="3"
                Grid.Column="1"
                Margin="3,10,3,3"
                Text="{Binding IPAddress}" />

            <TextBlock
                Grid.Row="4"
                Grid.Column="0"
                Margin="3,10,3,3"
                VerticalAlignment="Center"
                Text="端口*" />
            <TextBox
                Name="txtPort"
                Grid.Row="4"
                Grid.Column="1"
                Margin="3,10,3,3"
                Text="{Binding Port}" />

            <TextBlock
                Grid.Row="5"
                Grid.Column="0"
                Margin="3,10,3,3"
                VerticalAlignment="Center"
                Text="生产日期*" />
            <DatePicker
                Name="dpProductionDate"
                Grid.Row="5"
                Grid.Column="1"
                Margin="3,10,3,3"
                Language="zh-cn"
                SelectedDate="{Binding ProductionDate}" />

            <TextBlock
                Grid.Row="6"
                Grid.Column="0"
                Margin="3,10,3,3"
                VerticalAlignment="Center"
                Text="秤台号*" />
            <ComboBox
                Grid.Row="6"
                Grid.Column="1"
                materialDesign:ComboBoxAssist.MaxLength="10"
                materialDesign:HintAssist.Hint="选择秤台号"
                materialDesign:HintAssist.HintOpacity=".26"
                ItemsSource="{Binding ScalingNumsStr}"
                SelectedItem="{Binding ScalingID, Converter={StaticResource ScaleNameToNumberConverter}}" />



            <StackPanel
                Grid.Row="7"
                Grid.Column="0"
                Grid.ColumnSpan="2"
                Margin="3,10,3,3"
                HorizontalAlignment="Center"
                Cursor=""
                Orientation="Horizontal">
                <Button
                    Margin="10"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="False"
                    Content="取消" />
                <Button
                    Margin="10"
                    Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
                    CommandParameter="True"
                    Content="确定" />

            </StackPanel>
        </Grid>
    </Border>

</UserControl>
