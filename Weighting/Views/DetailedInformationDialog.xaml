<UserControl
    x:Class="Weighting.Views.DetailedInformationDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Weighting.Views"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="Auto"
    Height="Auto"
    MinWidth="200"
    MaxWidth="800"
    MaxHeight="600"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Button
            Width="60"
            Margin="20,0,0,0"
            HorizontalAlignment="Left"
            Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}">
            返回
        </Button>
        <DataGrid
            Grid.Row="2"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            HeadersVisibility="All"
            ItemsSource="{Binding DetailedLists}">
            <DataGrid.Columns>


                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding ScalingNum}"
                    Header="所属秤" />

                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding MaterialName}"
                    Header="混料名称" />



                <DataGridTextColumn
                    Width="150"
                    Binding="{Binding ActualWeight}"
                    Header="实际重量" />



            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
